{#
/**
 * @file
 * Drulma theme implementation to display a single page.
 */
#}

{{ page.primary_menu }}

<header{{ header_attributtes }}>
  <div class="hero-head">
    {{ page.header }}
  </div>
  {% if page.title %}
  <div class="hero-body">
    {{ page.title }}
  </div>
  {% endif %}
  <div class="hero-foot">
    {{ page.secondary_menu }}
  </div>
</header>

<main role="main">
  <section>
    <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
    
    <div class="container">
    {{ page.breadcrumb }}

    {{ page.highlighted }}

    {{ page.help }}
    </div>

   

    
    <div class="container">
    
      <div class="columns" >
        <div class="column content content--search">
         {{ page.content }}
        </div>

        {% if page.sidebar_first %}
          <aside class="column is-narrow" role="complementary">
            {{ page.sidebar_first }}
          </aside>
        {% endif %}

        {% if page.sidebar_second %}
          <aside class="column is-narrow" role="complementary">
            {{ page.sidebar_second }}
          </aside>
        {% endif %}
      </div>
    
    </div>
    
  </section>
</main>

{% if page.footer %}
  <footer class="footer" role="contentinfo">
    {{ page.footer }}
  </footer>
{% endif %}
